<?xml version="1.0" encoding="UTF-8" ?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">
    <item
        android:drawable="@drawable/splash_screen_bg"/>
    <item
        android:top="@dimen/splash_screen_app_name_top_padding"
        android:gravity="top|center_horizontal"
        android:drawable="@drawable/splash_screen_text"/>
    <item
        android:top="@dimen/splash_screen_app_logo_top_padding"
        android:gravity="top|center_horizontal"
        android:drawable="@drawable/splash_screen_logo"/>
    <item
        android:bottom="@dimen/splash_screen_company_logo_bottom_padding"
        android:gravity="bottom|center_horizontal"
        android:drawable="@drawable/splash_screen_devexpress_logo"/>
</layer-list>