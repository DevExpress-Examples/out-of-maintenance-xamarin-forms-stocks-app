<?xml version="1.0" encoding="utf-8"?>

<inset
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:insetLeft="@dimen/btn_button_bar_inset_horizontal"
        android:insetTop="@dimen/btn_button_bar_inset_vertical"
        android:insetRight="@dimen/btn_button_bar_inset_horizontal"
        android:insetBottom="@dimen/btn_button_bar_inset_vertical">
    <ripple android:color="?attr/colorControlHighlight">
        <item>
            <shape
                    android:shape="rectangle"
                    android:tint="@color/btn_positive_button_bar_color">
                <corners android:radius="@dimen/btn_button_bar_radius" />
                <solid  android:color="@android:color/white" />
                <padding
                        android:left="@dimen/btn_button_bar_padding_horizontal"
                        android:right="@dimen/btn_button_bar_padding_horizontal"
                        android:top="@dimen/btn_button_bar_padding_vertical"
                        android:bottom="@dimen/btn_button_bar_padding_vertical" />
            </shape>
        </item>
    </ripple>
</inset>