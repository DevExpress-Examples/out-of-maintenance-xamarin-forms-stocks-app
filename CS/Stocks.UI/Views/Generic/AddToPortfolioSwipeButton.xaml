<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dxe="clr-namespace:DevExpress.XamarinForms.DemoEditors;assembly=DevExpress.XamarinForms.DemoEditors"
    xmlns:views="clr-namespace:Stocks.UI.Views"
    x:Class="Stocks.UI.Views.AddToPortfolioSwipeButton">
    <StackLayout Margin="0" Padding="0" BackgroundColor="{DynamicResource AccentColor}">
        <dxe:IconView ImageSource="add_to_portfolio.svg" ForegroundColor="{DynamicResource TextColor}" VerticalOptions="EndAndExpand" HorizontalOptions="Center" WidthRequest="24" HeightRequest="24"/>
        <Label Text="Add to portfolio" TextColor="{DynamicResource TextColor}" VerticalOptions="StartAndExpand" HorizontalOptions="Center"/>
    </StackLayout>
</ContentView>
